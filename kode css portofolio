/* Gaya default untuk gambar */
img {
  max-width: 100%;
  height: auto;
  display: block;
  margin: 0 auto;
}

/* Media query untuk perangkat dengan lebar layar maksimal 600px (smartphone) */
@media (max-width: 600px) {
  img {
    width: 100%; /* Gambar akan mengisi lebar layar */
  }
}

/* Media query untuk perangkat dengan lebar layar antara 601px hingga 1024px (tablet) */
@media (min-width: 601px) and (max-width: 1024px) {
  img {
    width: 80%; /* Gambar akan mengisi 80% lebar layar */
  }
}

/* Media query untuk perangkat dengan lebar layar lebih dari 1024px (desktop) */
@media (min-width: 1025px) {
  img {
    width: 60%; /* Gambar akan mengisi 60% lebar layar */
  }
}
